{
  "Version": "2012-10-17",
  "Statement": [
      {
          "Effect": "Allow",
          "Action": "logs:CreateLogGroup",
          "Resource": "arn:aws:logs:{{ AWSREGION }}:{{ AWSACCOUNT }}:*"
      },
      {
          "Effect": "Allow",
          "Action": [
              "logs:CreateLogStream",
              "logs:PutLogEvents"
          ],
          "Resource": [
              "arn:aws:logs:{{ AWSREGION }}:{{ AWSACCOUNT }}:log-group:/aws/lambda/{{ FUNCNAME }}:*"
          ]
      }
  ]
}